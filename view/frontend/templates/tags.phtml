<?php
/**
 * @var \Strativ\ProductTags\Block\Product\Tags $block
 */
$tags = $block->getTags();
?>
<?php if (!empty($tags)): ?>
<div class="product-tags">
    <strong><?php echo __('Tags:') ?></strong>
    <ul>
        <?php foreach ($tags as $tag): ?>
            <li>
                <a href="<?php echo $block->getUrl('producttags/tag/view', ['tag' => trim($tag)]) ?>">
                    <?php echo $this->escapeHtml(trim($tag)) ?>
                </a>
            </li>
        <?php endforeach; ?>
    </ul>
</div>
<style>
    .product-tags ul {
        list-style: none;
        padding: 0;
    }
    .product-tags ul li {
        display: inline-block;
        margin-right: 5px;
        background-color: #f0f0f0;
        padding: 2px 5px;
        border-radius: 3px;
    }
</style>
<?php endif; ?> 